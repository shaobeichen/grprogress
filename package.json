{
    "name": "grprogress",
    "version": "1.0.0",
    "description": "a gradient progress for nodejs by go",
    "main": "./src/index.js",
    "scripts": {
        "postinstall": "node install.js",
        "dev": "npm run build:dev && node ./src/dev.js",
        "dev:go": "go run . 0.5",
        "build:dev": "node ./scripts/build-dev.js",
        "build:prod": "node ./scripts/build-prod.js",
        "release": "node ./scripts/release.js"
    },
    "files": [
        "install.js",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shaobeichen/grprogress.git"
    },
    "homepage": "https://github.com/shaobeichen/grprogress#readme",
    "author": "shaobeichen",
    "keywords": [
        "progress",
        "progressbar",
        "progress-bar",
        "go",
        "cli",
        "gradient",
        "bubbletea",
        "bubble"
    ],
    "optionalDependencies": {
        "@grprogress/darwin-arm64": "1.0.0",
        "@grprogress/darwin-amd64": "1.0.0",
        "@grprogress/linux-amd64": "1.0.0",
        "@grprogress/windows-amd64x64": "1.0.0"
    }
}